package com.joao.javaCaelum.exercicios;

public class soma1000 {
	public static void main(String[] args) {

		int contador = 1;
		while (contador < 1000) {
			for (int i = 1; i < 50; i+= contador) {
				System.out.println("Posição: " + i + " Numero: " + contador);
				contador = contador + i;
			}
		}
	}
}
